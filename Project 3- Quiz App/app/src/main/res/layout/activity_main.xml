<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#958B8B"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        tools:context="com.example.android.justjava.MainActivity">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingRight="10dp"
                android:text="Quiz!!"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="30sp" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="What is the latest version of java?"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/q1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textColor="@android:color/white" />

            <RadioButton
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textColor="@android:color/white" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Which of the following is true about String?"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/data_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="String is a data type."
                android:textColor="@android:color/white" />

            <RadioButton
                android:id="@+id/immutable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="String is immutable."
                android:textColor="@android:color/white" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Which of the following are data type?"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/int_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="int" />

            <CheckBox
                android:id="@+id/String"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="String" />

            <CheckBox
                android:id="@+id/double_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="double" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="....... is when an object or class is based on another object or class, using the same implementation. "
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ans_q4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Answer here"
                android:padding="2dp"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="....... is used to refer to one of two related but distinct notions, and sometimes to the combination."
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ans_q5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Answer here"
                android:padding="2dp"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Can constructor be inherited?"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No."
                android:textColor="@android:color/white" />

            <RadioButton
                android:id="@+id/yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes."
                android:textColor="@android:color/white" />
        </RadioGroup>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp">

            <Button
                android:id="@+id/showScore"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="6sp"
                android:onClick="showScore"
                android:paddingRight="10dp"
                android:text="Submit" />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>